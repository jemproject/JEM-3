<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>mod_jem_calajax</name>
	<creationDate>April 2015</creationDate>
	<author>JEM Community</author>
	<copyright>GNU General Public License 2</copyright>	 
	<authorEmail>info@joomlaeventmanager.net</authorEmail>
	<authorUrl>http://www.qivva.com</authorUrl>
	<version>3.0.7</version>
	<description>MOD_JEM_CALAJAX_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_jem_calajax">mod_jem_calajax.php</filename>
		<filename>mod_jem_calajax.css</filename>
		<filename>index.html</filename>
		<filename>mod_ajaxloader.php</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
        <folder>language</folder>	
	</files>
	<config>
	<fields name="params">
	<fieldset name="basic" addfieldpath="/administrator/components/com_jem/models/fields">
			<field name="Default_Stylesheet" 
			type="radio" 
			class="btn-group btn-group-yesno"
			default="1" label="MOD_JEM_CALAJAX_DEFAULT_CSS" description="MOD_JEM_CALAJAX_DEFAULT_CSS_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="User_stylesheet" type="text" default="" label="MOD_JEM_CALAJAX_USER_CSS" description="MOD_JEM_CALAJAX_USER_CSS_DESC" />	
		<field name="spacer" type="spacer" hr="true" default="" label="" description="" />
		<field name="Show_Tooltips" 
		type="radio" 
		class="btn-group btn-group-yesno"
		default="1" label="MOD_JEM_CALAJAX_SHOW_TOOLTIPS" description="MOD_JEM_CALAJAX_SHOW_TOOLTIPS_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="Show_Tooltips_Title" 
		type="radio" 
		class="btn-group btn-group-yesno"
		default="1" label="MOD_JEM_CALAJAX_SHOW_TOOLTIPS_TITLE" description="MOD_JEM_CALAJAX_SHOW_TOOLTIPS_TITLE_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="cal15q_tooltips_title" type="text" default="Event" label="MOD_JEM_CALAJAX_TOOLTIPS_TITLE_SINGULAR" description="MOD_JEM_CALAJAX_TOOLTIPS_TITLE_SINGULAR_DESC" />	
		<field name="cal15q_tooltipspl_title" type="text" default="Events" label="MOD_JEM_CALAJAX_TOOLTIPS_TITLE_PLURAL" description="MOD_JEM_CALAJAX_TOOLTIPS_TITLE_PLURAL_DESC" />		
        <field name="DisplayCat" 
        	type="radio" 
        	class="btn-group btn-group-yesno"
        	default="0" label="MOD_JEM_CALAJAX_SHOW_TOOLTIP_CATEGORY" description="MOD_JEM_CALAJAX_SHOW_TOOLTIP_CATEGORY_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="DisplayVenue" 
		type="radio" 
		class="btn-group btn-group-yesno"
		default="0" label="MOD_JEM_CALAJAX_SHOW_TOOLTIP_VENUE" description="MOD_JEM_CALAJAX_SHOW_TOOLTIP_VENUE_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="spacer2" type="spacer" hr="true" default="" label="" description="" />
		<field name="UseJoomlaLanguage" 
		type="radio" 
		class="btn-group btn-group-yesno"
		default="1" label="MOD_JEM_CALAJAX_LANGUAGE_JOOMLA" description="MOD_JEM_CALAJAX_LANGUAGE_JOOMLA_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="day_name_length" type="list" default="2" label="MOD_JEM_CALAJAX_DAYNAME_LENGTH" description="MOD_JEM_CALAJAX_DAYNAME_LENGTH_DESC">
			<option value="0">MOD_JEM_CALAJAX_DAYNAME_LENGTH_OPTION0</option>
			<option value="1">MOD_JEM_CALAJAX_DAYNAME_LENGTH_OPTION1</option>
			<option value="2">MOD_JEM_CALAJAX_DAYNAME_LENGTH_OPTION2</option>
			<option value="3">MOD_JEM_CALAJAX_DAYNAME_LENGTH_OPTION3</option>
			<option value="4">MOD_JEM_CALAJAX_DAYNAME_LENGTH_OPTION4</option>
		</field>
		<field name="first_day" type="list" default="1" label="MOD_JEM_CALAJAX_STARTWEEK" description="MOD_JEM_CALAJAX_STARTWEEK_DESC">
			<option value="0">MOD_JEM_CALAJAX_SUNDAY</option>
			<option value="1">MOD_JEM_CALAJAX_MONDAY</option>
		</field>
		<field name="Year_length" 
		type="list" 
		class="inputbox"
		default="1" label="MOD_JEM_CALAJAX_YEAR_LENGTH" description="MOD_JEM_CALAJAX_YEAR_LENGTH_DESC">
			<option value="0">MOD_JEM_CALAJAX_TWO</option>
			<option value="1">MOD_JEM_CALAJAX_FOUR</option>
		</field>
		<field name="Month_length" 
		type="radio" 
		class="btn-group btn-group-yesno"
		default="0" label="MOD_JEM_CALAJAX_MONTH_LENGTH" description="MOD_JEM_CALAJAX_MONTH_LENGTH">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="Month_offset" type="text" default="0" label="MOD_JEM_CALAJAX_MONTH_OFFSET" description="MOD_JEM_CALAJAX_MONTH_OFFSET_DESC" />
		<field name="Time_offset" type="text" default="0" label="MOD_JEM_CALAJAX_TIME_OFFSET" description="MOD_JEM_CALAJAX_TIME_OFFSET_DESC" />
		<field name="spacer3" type="spacer" hr="true" default="" label="" description="" />
		<field name="Remember" 
		type="radio"
		class="btn-group btn-group-yesno"
		 default="1" label="MOD_JEM_CALAJAX_REMEMBER" description="MOD_JEM_CALAJAX_REMEMBER_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="CurrentEvents" 
		type="radio" 
		class="btn-group btn-group-yesno"
		default="1" label="MOD_JEM_CALAJAX_EVENTS_CURRENT" description="MOD_JEM_CALAJAX_EVENTS_CURRENT_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>		
		<field name="ArchivedEvents" 
		type="radio"
		class="btn-group btn-group-yesno"
		 default="0" label="MOD_JEM_CALAJAX_EVENTS_ARCHIVED" description="MOD_JEM_CALAJAX_EVENTS_ARCHIVED_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="StraightToDetails" 
		type="radio" 
		class="btn-group btn-group-yesno"
		default="1" label="MOD_JEM_CALAJAX_STRAIGHTTODETAILS" description="MOD_JEM_CALAJAX_STRAIGHTTODETAILS_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="spacer4" type="spacer" hr="true" default="" label="" description="" />
		<field name="moduleclass_sfx" type="text" default="" label="MOD_JEM_CALAJAX_MODULE_CLASSSUFFIX" description="MOD_JEM_CALAJAX_MODULE_CLASSSUFFIX_DESC" />
		<field name="locale_override" type="text" default="" label="MOD_JEM_CALAJAX_LOCALE" description="MOD_JEM_CALAJAX_LOCALE_DESC" />
		<field name="catid" type="categoryedit" default="" multiple="true" label="MOD_JEM_CALAJAX_CATEGORY_ID" description="MOD_JEM_CALAJAX_CATEGORY_ID_DESC" />
		<field name="venid" type="venueoptions" default="" multiple="true" label="MOD_JEM_CALAJAX_VENUE_ID" description="MOD_JEM_CALAJAX_VENUE_ID_DESC" />
		<field name="FixItemID" type="text" default="" label="MOD_JEM_CALAJAX_ITEMID" description="MOD_JEM_CALAJAX_ITEMID_DESC" />		
	</fieldset></fields>
	</config>
</extension>